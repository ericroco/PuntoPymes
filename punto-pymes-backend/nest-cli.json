{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/punto-pymes-backend/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "classValidatorShim": true,
          "introspectComments": true
        }
      }
    ],
    "tsConfigPath": "apps/punto-pymes-backend/tsconfig.app.json"
  },
  "monorepo": true,
  "root": ".",
  "projects": {
    "auth": {
      "type": "application",
      "root": "apps/auth",
      "entryFile": "main",
      "sourceRoot": "apps/auth/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth/tsconfig.app.json"
      }
    },
    "database": {
      "type": "library",
      "root": "libs/database",
      "entryFile": "index",
      "sourceRoot": "libs/database/src",
      "compilerOptions": {
        "tsConfigPath": "libs/database/tsconfig.lib.json"
      }
    },
    "nomina": {
      "type": "application",
      "root": "apps/nomina",
      "entryFile": "main",
      "sourceRoot": "apps/nomina/src",
      "compilerOptions": {
        "tsConfigPath": "apps/nomina/tsconfig.app.json"
      }
    },
    "personal": {
      "type": "application",
      "root": "apps/personal",
      "entryFile": "main",
      "sourceRoot": "apps/personal/src",
      "compilerOptions": {
        "tsConfigPath": "apps/personal/tsconfig.app.json"
      }
    },
    "productividad": {
      "type": "application",
      "root": "apps/productividad",
      "entryFile": "main",
      "sourceRoot": "apps/productividad/src",
      "compilerOptions": {
        "tsConfigPath": "apps/productividad/tsconfig.app.json"
      }
    },
    "punto-pymes-backend": {
      "type": "application",
      "root": "apps/punto-pymes-backend",
      "entryFile": "main",
      "sourceRoot": "apps/punto-pymes-backend/src",
      "compilerOptions": {
        "tsConfigPath": "apps/punto-pymes-backend/tsconfig.app.json"
      }
    }
  }
}